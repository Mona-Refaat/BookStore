@model BookStore.Models.Borrowing

@{
    ViewData["Title"] = "Borrow Book";
}

<h1>Borrow Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BorrowFrom" class="control-label"></label>
                <input asp-for="BorrowFrom" class="form-control" />
                <span asp-validation-for="BorrowFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowTo" class="control-label"></label>
                <input asp-for="BorrowTo" class="form-control" />
                <span asp-validation-for="BorrowTo" class="text-danger"></span>
            </div>
            <span class="text-danger"> @Html.ValidationMessage("Error")</span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

       
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
